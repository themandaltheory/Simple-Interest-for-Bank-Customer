#Python code 

def calculate_simple_interest(principal, rate, time):
    interest = (principal * rate * time) / 100
    return interest

def main():
    principal = float(input("Enter the principal amount: "))
    gender = input("Enter the gender (M/F): ").upper()
    is_senior_citizen = input("Are you a senior citizen? (Y/N): ").upper()

    if gender == "M" and is_senior_citizen == "Y":
        rate = 7
    elif gender == "M" and is_senior_citizen == "N":
        rate = 5
    elif gender == "F" and is_senior_citizen == "Y":
        rate = 8
    elif gender == "F" and is_senior_citizen == "N":
        rate = 6
    else:
        print("Invalid input.")
        return

    time = float(input("Enter the time period (in years): "))

    interest = calculate_simple_interest(principal, rate, time)
    total_amount = principal + interest

    print("\nSimple Interest: {:.2f}".format(interest))
    print("Total amount: {:.2f}".format(total_amount))

if __name__ == "__main__":
    main()


